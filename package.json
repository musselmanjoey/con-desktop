{
  "name": "con-desktop",
  "version": "0.1.0",
  "description": "Desktop Electron app for AI conference content research and management",
  "main": "src/main/main.js",
  "homepage": "https://github.com/musselmanjoey/con-desktop",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http-get://localhost:3006 && cross-env RENDERER_PORT=3006 npm run dev:electron\"",
    "dev:renderer": "next dev src/renderer -p 3006",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "next build src/renderer",
    "build:electron": "electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "lint": "next lint src/renderer",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:web": "playwright test e2e/*.web.spec.js",
    "test:e2e:electron": "playwright test e2e/electron-app.spec.js",
    "test:all": "npm run test && npm run test:e2e"
  },
  "keywords": [
    "electron",
    "next.js",
    "conference",
    "ai",
    "content-management"
  ],
  "author": "musselmanjoey",
  "license": "MIT",
  "dependencies": {
    "electron-serve": "^1.2.0",
    "electron-store": "^8.1.0",
    "next": "15.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-git": "^3.20.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "eslint": "^8",
    "eslint-config-next": "15.5.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.musselmanjoey.con-desktop",
    "productName": "Con Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/",
      "src/renderer/out/",
      "node_modules/",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
